{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "dnsimple",
  "title": "DNSimple",
  "description": "View your DNSimple domains",
  "icon": "logomark-classic.png",
  "author": "mlafeldt",
  "license": "MIT",
  "commands": [
    {
      "name": "domains",
      "title": "Search Domains",
      "description": "Search your domains",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your DNSimple user access token",
      "placeholder": "Enter your access token"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.45.2",
    "date-fns": "^2.29.3",
    "dnsimple": "^6.1.0",
    "swr": "^2.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "22.10.5",
    "@types/react": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
